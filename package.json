{
  "name": "mnml-client",
  "version": "0.0.2",
  "description": "Client library for Minimal Chat",
  "author": "Matthew Mihok <matthew@minimal.chat>",
  "repository": "minimalchat/mnml-client.git",
  "license": "BSD-3-Clause",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "npm run build:lite && npm run build:full",
    "build:lite": "webpack --config webpack.lite.config.js --progress --colors",
    "build:full": "webpack --config webpack.full.config.js --progress --colors",
    "build:watch": "npm run build:full -- --watch",
    "build:lite:watch": "npm run build:lite -- --watch",
    "build:full:watch": "npm run build:full -- --watch",
    "lint": "eslint src --ext .js,.jsx",
    "coverage": "jest --coverage && cat coverage/lcov.info | coveralls",
    "dev": "echo 'WARNING: This command is deprecated, use `npm run build:watch` instead' && npm run build:watch"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "node_modules/jest-enzyme/lib/index.js",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/webpack*.js",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/test/**"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageDirectory": "coverage",
    "testRegex": "(/test/.*|\\.(test|spec))\\.(js|jsx)$"
  },
  "dependencies": {
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-jss": "^4.1.3",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "socket.io-client": "^1.5.1"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "coveralls": "^2.11.14",
    "enzyme": "^2.6.0",
    "eslint": "^3.10.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "jest-cli": "^17.0.3",
    "jest-enzyme": "^2.0.0",
    "react-addons-test-utils": "^15.4.1",
    "react-test-renderer": "^15.4.1",
    "webpack": "^2.2.0-rc.2"
  }
}
